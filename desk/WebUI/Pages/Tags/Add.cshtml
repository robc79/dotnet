@page
@model Desk.WebUI.Pages.Tags.AddModel
@{
    ViewData["Title"] = "Add Tag";
}

<div class="text-center">
    <h1 class="display-4">Add Tag</h1>
</div>

<div class="row justify-content-center mb-3">
    <div class="card mb-3 col-8 justify-content-center">
        <div class="card-body">
            <div class="card-text">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Form.Name" class="form-label"></label>
                        <input asp-for="Form.Name" class="form-control" />
                        <span asp-validation-for="Form.Name" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Add" class="btn btn-primary" />
                    | <a asp-page="/Index">Home</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
